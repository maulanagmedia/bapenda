<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".ListViewSurvey">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_survey"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/merchant_image_size"
        android:layout_height="@dimen/merchant_image_size"
        app:cardCornerRadius="5dp"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/img_merchant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/grey"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/layout_survey"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/txt_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-black" />

        <TextView
            android:id="@+id/txt_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:text="Status"/>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#45E745"
            android:textSize="16sp"
            app:fontFamily="sans-serif"/>

    </LinearLayout>

</RelativeLayout>