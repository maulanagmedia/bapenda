<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".ListViewSurvey">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_survey"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/merchant_image_size"
        android:layout_height="@dimen/merchant_image_size"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/img_survey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/grey"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/padding_dexa"
        android:layout_toEndOf="@id/layout_survey"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/txt_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nama"
            android:textColor="@color/black"
            android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/txt_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alamat"
            android:textColor="#000000"
            android:textSize="@dimen/text_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Pendaftaran"
            android:gravity="right"
            android:layout_marginTop="@dimen/padding_tiny"
            android:id="@+id/tv_status"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/black"/>

    </LinearLayout>

    <!--<TextView
        android:id="@+id/txt_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/text_tanggal"
        android:textColor="#000000"
        android:textSize="20sp" />-->

</RelativeLayout>