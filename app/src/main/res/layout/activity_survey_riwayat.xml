<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MenuPendaftaran.RiwayatPendaftaranActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueLight"
            app:titleTextColor="@color/white"
            app:popupTheme="@style/AppTheme.NoActionBar.TitleTextStyle">
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/linear_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/blueLight">

            <TextView
                android:id="@+id/txt_tanggalawal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edt4"
                android:clickable="true"
                android:drawableStart="@drawable/ic_calendar"
                android:focusable="true"
                android:gravity="center"
                android:hint="Tanggal Awal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="12sp"
                android:textColor="#000000"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal|center_vertical|center"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_remove" />

            <TextView
                android:id="@+id/txt_tanggalakhir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edt4"
                android:clickable="true"
                android:drawableStart="@drawable/ic_calendar"
                android:focusable="true"
                android:gravity="center"
                android:hint="Tanggal Akhir"
                android:inputType="date"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="12sp"
                android:textColor="#000000"/>

            <ImageButton
                android:id="@+id/btnnproses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button3"
                android:gravity="center"
                android:src="@drawable/ic_proses"
                app:fontFamily="sans-serif-condensed-medium" />

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F2F2"
            app:tabIndicatorColor="@color/blueDark"
            app:tabSelectedTextColor="@color/blueLight">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabDaftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daftar" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabBelumDaftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/belum"/>

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>